<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".activity.MainActivity">
    <!--内容视图-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/toolBar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorMain">
        <TextView
            android:id="@+id/main_tv_login"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="14dp"
            android:text="登录1"
            android:textColor="#fff"
            android:textSize="17sp"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/main_tv_login2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:text="登录2"
            android:textColor="#fff"
            android:textSize="17sp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGroup"
        android:layout_below="@+id/toolBar"></FrameLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#959595"
    android:layout_above="@+id/radioGroup"></View>
    <RadioGroup
        android:padding="14dp"
        android:background="@color/colorMain"
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_home"
            style="@style/RadioButton"
            android:checked="true"
            android:text="首页"
            android:textSize="15sp"
            android:textColor="@drawable/selector_main_radiobutton" />

        <RadioButton
            android:id="@+id/button_one"
            style="@style/RadioButton"
            android:text="1"
            android:textSize="15sp"
            android:textColor="@drawable/selector_main_radiobutton"/>

        <RadioButton
            android:id="@+id/button_two"
            style="@style/RadioButton"
            android:text="2"
            android:textSize="15sp"
            android:textColor="@drawable/selector_main_radiobutton"/>

        <RadioButton
            android:id="@+id/button_three"
            style="@style/RadioButton"
            android:text="3"
            android:textSize="15sp"
            android:textColor="@drawable/selector_main_radiobutton"
        />
    </RadioGroup>
</RelativeLayout>
    <!--导航视图-->
    <RelativeLayout
        android:clickable="true"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
    >
        <fragment
            android:id="@+id/slideFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.huangj.myapp.fragment.SlideFragment"
            tools:layout="@layout/fragment_slide">
        </fragment>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
