<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_bgm"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <!--<CheckBox-->
        <!--android:id="@+id/cb_add"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="10dp" />-->


    <RelativeLayout
        android:id="@+id/rl_img_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tv_owner_name"
            android:layout_width="72dp"
            android:layout_height="47dp"
            android:text="hahah"
            android:textColor="@drawable/selector_text"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_owner_name"
            android:layout_alignRight="@id/tv_owner_name"
            android:layout_below="@id/tv_owner_name"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/selector_image"
                android:id="@+id/iv_personal_or_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" />


            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:background="#0f0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/rl_img_display"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>